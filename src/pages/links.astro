---
import Card from "../components/ui/Card.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const links = [
  {
    title: "GitHub",
    url: "https://github.com/sou1118",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>`,
    description: "コードやプロジェクトをチェックしてください",
  },
  {
    title: "mixi2",
    url: "https://mixi.social/@kattyan",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M2 12h20"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>`,
    description: "mixi2でつながりましょう",
  },
  {
    title: "Spotify",
    url: "https://open.spotify.com/user/balher2ed4oelkfj65ujtt8pn?si=a4ee248aa2064b90",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M8 14.5a4 4 0 0 1 6 0"/><path d="M6 11.5a8 8 0 0 1 12 0"/><path d="M4 8.5a12 12 0 0 1 16 0"/></svg>`,
    description: "音楽の趣味をのぞいてみてください",
  },
];
---

<BaseLayout title="Links | Kattyan">
  <div class="space-y-8">
    <div class="space-y-4">
      <h1 class="text-4xl font-bold">Links</h1>
      <p class="text-xl text-muted-foreground">My social links and profiles</p>
    </div>

    <div class="grid gap-4">
      {links.map((link) => (
        <Card>
          <a 
            href={link.url}
            class="flex items-center p-6 space-x-4 no-underline transition-colors hover:bg-muted/50"
            target="_blank"
            rel="noopener noreferrer"
          >
            <div class="flex-shrink-0" set:html={link.icon} />
            <div class="flex-grow">
              <h2 class="text-xl font-semibold">{link.title}</h2>
              <p class="text-muted-foreground">{link.description}</p>
            </div>
          </a>
        </Card>
      ))}
    </div>
  </div>
</BaseLayout>
