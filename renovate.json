{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "schedule:weekly",
    ":maintainLockFilesWeekly",
    ":semanticCommits",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "astro packages",
      "groupSlug": "astro",
      "automerge": true,
      "matchPackageNames": [
        "/^@astrojs/",
        "/^astro$/"
      ]
    },
    {
      "groupName": "biome packages",
      "groupSlug": "biome",
      "automerge": true,
      "matchPackageNames": [
        "/^@biomejs/"
      ]
    },
    {
      "groupName": "textlint packages",
      "groupSlug": "textlint",
      "automerge": true,
      "matchPackageNames": [
        "/^textlint/"
      ]
    },
    {
      "groupName": "tailwind packages",
      "groupSlug": "tailwind",
      "automerge": true,
      "matchPackageNames": [
        "/^@tailwindcss/",
        "/^tailwindcss$/",
        "/^postcss$/",
        "/^autoprefixer$/"
      ]
    },
    {
      "groupName": "rehype packages",
      "groupSlug": "rehype",
      "automerge": true,
      "matchPackageNames": [
        "/^rehype-/"
      ]
    },
    {
      "groupName": "remark packages",
      "groupSlug": "remark",
      "automerge": true,
      "matchPackageNames": [
        "/^remark-/"
      ]
    },
    {
      "matchPackageNames": [
        "katex",
        "rehype-katex"
      ],
      "groupName": "katex packages",
      "groupSlug": "katex",
      "automerge": true
    },
    {
      "matchPackageNames": [
        "shiki",
        "sharp"
      ],
      "groupName": "image processing and syntax highlighting",
      "groupSlug": "image-syntax",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "dev dependencies (non-major)",
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 3am on monday"
    ]
  },
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": true,
  "rangeStrategy": "pin",
  "prCreation": "not-pending",
  "minimumReleaseAge": "3 days",
  "platformAutomerge": true
}
